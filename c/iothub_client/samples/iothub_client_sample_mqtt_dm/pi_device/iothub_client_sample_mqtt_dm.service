[Unit]
Description=Azure-IoTHub Client DM Sample
After=network.target auditd.service
ConditionPathExists=/usr/share/iothub_client_sample_mqtt_dm/.device_connection_string

[Service]
Type=forking
ExecStart=/usr/share/iothub_client_sample_mqtt_dm/iothub_client_sample_mqtt_dm
KillMode=process

[Install]
WantedBy=multi-user.target
Alias=iothub_client_sample_mqtt_dm
